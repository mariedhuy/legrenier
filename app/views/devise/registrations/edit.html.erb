<div class="container mt-3">
  <h2>Modifier <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input :name,
                  hint: "laissez vide si vous ne souhaitez pas modifier",
                  required: false,
                  input_html: { autocomplete: "name" },
                  label: "Nom" %>
      <%= f.input :address,
                  hint: "laissez vide si vous ne souhaitez pas modifier",
                  required: false,
                  input_html: { autocomplete: "address" },
                  label: "Adresse" %>
      <%= f.input :phone,
                  hint: "laissez vide si vous ne souhaitez pas modifier",
                  required: false,
                  input_html: { autocomplete: "phone" },
                  label: "Téléphone" %>
      <%= f.input :avatar,
                  required: false,
                  input_html: { autocomplete: "avatar" },
                  label: "Photo de profil" %>
      <%= f.input :password,
                  hint: "laissez vide si vous ne souhaitez pas modifier",
                  required: false,
                  input_html: { autocomplete: "new-password" },
                  label: "Nouveau mot de passe"  %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" },
                  label: "Confirmation du nouveau mot de passe"  %>
      <%= f.input :current_password,
                  hint: "nous avons besoin de votre mot de passe actuel pour confirmer les modifications",
                  required: true,
                  input_html: { autocomplete: "current-password" },
                  label: "Mot de passe actuel"  %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Mettre à jour", class:"btn btn-blue" %>
    </div>
  <% end %>

  <h3>Effacer mon compte</h3>

  <div>Pas content ? <%= button_to "Effacer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

  <%= link_to "Retour", :back %>
</div>
