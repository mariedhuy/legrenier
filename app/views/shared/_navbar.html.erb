<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%# <h1>Le Grenier</h1>
      <h3>de Léon</h3> %>
      <strong>Le Grenier</strong>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Rechercher un objet", items_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Partager un objet", new_item_path, class: "btn btn-navbar" %>
          </li>
          <li class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <% if current_user.avatar %>
            <%= image_tag current_user.avatar, class: "avatar", alt: "dropdown menu" %>
            <% else %>
            <%= image_tag "https://static.thenounproject.com/png/4035892-200.png", class: "avatar", alt: "dropdown menu" %>
            <% end %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Mes objets", my_items_path, class: "dropdown-item" %>
              <%= link_to "Mes prêts", requests_path, class: "dropdown-item" %>
              <%= link_to "Mes emprunts", bookings_path, class: "dropdown-item" %>
              <%= link_to "Me déconnecter", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Partager un objet", new_item_path, class: "btn btn-navbar" %>
          </li>
          <li class="nav-item">
            <%= link_to "Me connecter", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
